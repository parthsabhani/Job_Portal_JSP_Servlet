	<script>
		function confirmDelete() {
			var confirmation = confirm("Are you sure you want to delete your profile?");
			if (confirmation) {
				// Redirect to the servlet or JSP page that handles the deletion
				window.location.href = 'deleteUserProfile'; 				
			} else {
				// Do nothing, stay on the same page
				return false;
			}
